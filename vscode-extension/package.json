{
  "name": "copilot-prompts-manager",
  "displayName": "Copilot Prompts Manager",
  "description": "管理和切换 GitHub Copilot 的 Prompts 和 Agents 配置 - 从 GitHub 动态获取",
  "version": "1.3.0",
  "publisher": "forlear",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "copilot",
    "prompts",
    "agents",
    "ai",
    "github"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilot-prompts",
          "title": "Copilot Prompts",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "copilot-prompts": [
        {
          "id": "copilotPromptsTree",
          "name": "可用配置",
          "icon": "media/icon.svg",
          "contextualTitle": "Copilot Prompts"
        }
      ]
    },
    "commands": [
      {
        "command": "copilotPrompts.applyConfig",
        "title": "应用到项目",
        "category": "Copilot Prompts",
        "icon": "$(cloud-download)"
      },
      {
        "command": "copilotPrompts.clearProjectConfig",
        "title": "清空项目配置",
        "category": "Copilot Prompts",
        "icon": "$(trash)"
      },
      {
        "command": "copilotPrompts.checkIssues",
        "title": "检查配置问题",
        "category": "Copilot Prompts",
        "icon": "$(warning)"
      },
      {
        "command": "copilotPrompts.refresh",
        "title": "刷新配置列表",
        "category": "Copilot Prompts",
        "icon": "$(sync)"
      },
      {
        "command": "copilotPrompts.selectAll",
        "title": "全选",
        "category": "Copilot Prompts",
        "icon": "$(check-all)"
      },
      {
        "command": "copilotPrompts.clearAll",
        "title": "清空选择",
        "category": "Copilot Prompts",
        "icon": "$(clear-all)"
      },
      {
        "command": "copilotPrompts.toggleItem",
        "title": "切换选择",
        "category": "Copilot Prompts"
      },
      {
        "command": "copilotPrompts.openManager",
        "title": "打开配置管理器",
        "category": "Copilot Prompts",
        "icon": "$(settings-gear)"
      },
      {
        "command": "copilotPrompts.viewCurrent",
        "title": "查看当前配置",
        "category": "Copilot Prompts",
        "icon": "$(file-text)"
      },
      {
        "command": "copilotPrompts.loadTemplate",
        "title": "加载配置模板",
        "category": "Copilot Prompts",
        "icon": "$(folder-opened)"
      },
      {
        "command": "copilotPrompts.search",
        "title": "搜索 Prompts",
        "category": "Copilot Prompts",
        "icon": "$(search)"
      },
      {
        "command": "copilotPrompts.showActive",
        "title": "显示当前生效的配置",
        "category": "Copilot Prompts",
        "icon": "$(info)"
      },
      {
        "command": "copilotPrompts.applyToFolder",
        "title": "应用 MTA 智能助手配置",
        "category": "Copilot Prompts",
        "icon": "$(cloud-download)"
      },
      {
        "command": "copilotPrompts.clearFolderConfig",
        "title": "清除 MTA 智能助手配置",
        "category": "Copilot Prompts",
        "icon": "$(trash)"
      },
      {
        "command": "copilotPrompts.viewFolderConfig",
        "title": "查看 MTA 智能助手配置",
        "category": "Copilot Prompts",
        "icon": "$(file-text)"
      },
      {
        "command": "copilotPrompts.createAgent",
        "title": "新建 Agent",
        "category": "MTA 智能助手",
        "icon": "$(add)"
      },
      {
        "command": "copilotPrompts.editAgent",
        "title": "编辑 Agent",
        "category": "MTA 智能助手",
        "icon": "$(edit)"
      },
      {
        "command": "copilotPrompts.generateAgentFromPackage",
        "title": "从 npm 包生成 Agent",
        "category": "MTA 智能助手",
        "icon": "$(package)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "copilotPrompts.applyConfig",
          "when": "view == copilotPromptsTree",
          "group": "navigation@0"
        },
        {
          "command": "copilotPrompts.selectTarget",
          "when": "view == copilotPromptsTree",
          "group": "navigation@1"
        },
        {
          "command": "copilotPrompts.clearProjectConfig",
          "when": "view == copilotPromptsTree",
          "group": "navigation@2"
        },
        {
          "command": "copilotPrompts.refresh",
          "when": "view == copilotPromptsTree",
          "group": "navigation@3"
        },
        {
          "command": "copilotPrompts.checkIssues",
          "when": "view == copilotPromptsTree",
          "group": "navigation@4"
        },
        {
          "command": "copilotPrompts.search",
          "when": "view == copilotPromptsTree",
          "group": "navigation@5"
        },
        {
          "command": "copilotPrompts.createAgent",
          "when": "view == copilotPromptsTree",
          "group": "navigation@6"
        },
        {
          "command": "copilotPrompts.showActive",
          "when": "view == copilotPromptsTree",
          "group": "1_info@1"
        },
        {
          "command": "copilotPrompts.selectAll",
          "when": "view == copilotPromptsTree",
          "group": "1_modify@1"
        },
        {
          "command": "copilotPrompts.clearAll",
          "when": "view == copilotPromptsTree",
          "group": "1_modify@2"
        },
        {
          "command": "copilotPrompts.loadTemplate",
          "when": "view == copilotPromptsTree",
          "group": "2_template@1"
        }
      ],
      "view/item/context": [
        {
          "command": "copilotPrompts.viewPromptContent",
          "when": "view == copilotPromptsView && viewItem == prompt",
          "group": "inline"
        },
        {
          "command": "copilotPrompts.editAgent",
          "when": "view == copilotPromptsView && viewItem == prompt",
          "group": "edit@1"
        }
      ],
      "explorer/context": [
        {
          "command": "copilotPrompts.applyToFolder",
          "when": "explorerResourceIsFolder && resourceScheme == file",
          "group": "copilot@1"
        },
        {
          "command": "copilotPrompts.clearFolderConfig",
          "when": "explorerResourceIsFolder && resourceScheme == file",
          "group": "copilot@2"
        },
        {
          "command": "copilotPrompts.viewFolderConfig",
          "when": "explorerResourceIsFolder && resourceScheme == file",
          "group": "copilot@3"
        }
      ]
    },
    "configuration": {
      "title": "Copilot Prompts Manager",
      "properties": {
        "copilotPrompts.promptsPath": {
          "type": "string",
          "default": "../copilot-prompts",
          "description": "Prompts 仓库的相对路径"
        },
        "copilotPrompts.autoApply": {
          "type": "boolean",
          "default": false,
          "description": "选择后自动应用配置"
        },
        "copilotPrompts.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "显示操作通知"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "fetch:latest": "node fetch_latest_config.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "commands": [
    {
      "command": "copilotPrompts.selectTarget",
      "title": "选择目标工作区并应用配置",
      "category": "Copilot Prompts",
      "icon": "$(rocket)"
    }
  ],
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/vsce": "^2.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ForLear/copilot-prompts.git"
  },
  "license": "MIT"
}
